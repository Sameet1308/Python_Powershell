import boto3

def lambda_handler(event, context):
    # Initialize a Glue client
    glue_client = boto3.client('glue')

    # Define the database and table name
    database_name = 'your_local_glue_database'
    table_name = 'your_table_name'

    # Get the table definition
    response = glue_client.get_table(
        DatabaseName=database_name,
        Name=table_name
    )

    table = response['Table']
    columns = table['StorageDescriptor']['Columns']
    table_name = table['Name']

    # Construct the DDL statement
    ddl = f"CREATE TABLE {database_name}.{table_name} (\n"
    
    column_definitions = []
    for column in columns:
        col_name = column['Name']
        col_type = column['Type']
        column_definitions.append(f"    {col_name} {col_type}")
    
    ddl += ",\n".join(column_definitions)
    ddl += "\n);"

    # Print the DDL statement
    print(ddl)

    # Return the DDL statement if needed for further processing
    return {
        'statusCode': 200,
        'body': ddl
    }
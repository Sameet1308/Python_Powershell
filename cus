SELECT 
    TO_CHAR(DATE_TRUNC('MONTH', DATEADD('MONTH', ROW_NUMBER() OVER (ORDER BY 1) - 1, '2022-01-01')), 'MM') AS MONTH_PADDED,
    TO_NUMBER(TO_CHAR(DATE_TRUNC('MONTH', DATEADD('MONTH', ROW_NUMBER() OVER (ORDER BY 1) - 1, '2022-01-01')), 'MM')) AS MONTH_NUMBER,
    TO_CHAR(DATE_TRUNC('MONTH', DATEADD('MONTH', ROW_NUMBER() OVER (ORDER BY 1) - 1, '2022-01-01')), 'Month') AS MONTH_NAME
FROM 
    (SELECT ROW_NUMBER() OVER (ORDER BY 1 DESC) AS ROW_NUM
     FROM TABLE(GENERATOR(ROWCOUNT => 12))) 
ORDER BY 
    MONTH_NUMBER DESC;
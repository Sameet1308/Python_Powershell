<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Optimized Responsive Buttons</title>
<style>
    body, html {
        height: 100%;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Arial, sans-serif; /* Ensures font consistency */
    }
    button {
        height: 8vh; /* Reduced from 10vh for more proportional appearance */
        padding: 0 1vh; /* Smaller padding */
        margin: 5px;
        border: none;
        border-bottom: 3px solid transparent; /* 3px solid border for more emphasis */
        background-color: transparent;
        color: black;
        outline: none;
        transition: color 0.3s, border-bottom 0.3s;
        font-size: 2vh; /* Reduced font size for better proportion */
    }
    button:hover {
        color: red;
    }
    .selected {
        color: red;
        border-bottom: 3px solid red;
    }
</style>
</head>
<body>
    <div class="container">
        <button id="btn1" class="selected" onclick="selectButton('btn1')">Chapter 1</button>
        <button id="btn2" onclick="selectButton('btn2')">Chapter 2</button>
        <button id="btn3" onclick="selectButton('btn3')">Chapter 3</button>
        <button id="btn4" onclick="selectButton('btn4')">Chapter 4</button>
        <button id="btn5" onclick="selectButton('btn5')">Chapter 5</button>
    </div>

    <script>
        function selectButton(selectedId) {
            // Remove the selected class from all buttons
            document.querySelectorAll('button').forEach(button => {
                button.classList.remove('selected');
            });

            // Add the selected class to the clicked button
            document.getElementById(selectedId).classList.add('selected');
        }
    </script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Interactive Chapter and Page Navigation</title>
<style>
    body, html {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        font-family: Arial, sans-serif;
    }
    .chapters-container {
        display: flex;
        flex-direction: row; /* Align chapters horizontally */
        justify-content: center;
        margin-top: 20px;
    }
    .chapter {
        margin: 0 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    button {
        height: 6vh;
        padding: 0 0.5vh;
        margin: 5px;
        border: none;
        border-bottom: 3px solid transparent;
        background-color: transparent;
        color: black;
        outline: none;
        transition: color 0.3s, border-bottom 0.3s;
        font-size: 1.8vh;
        display: flex;
        align-items: start;
    }
    button:hover, .selected {
        color: red;
        border-bottom: 3px solid red;
    }
    .page-buttons {
        display: none;
        flex-direction: row; /* Align page buttons horizontally */
        padding-left: 20px;
    }
    .chapter.selected .page-buttons {
        display: flex;
    }
</style>
</head>
<body>
    <div class="chapters-container">
        <div class="chapter">
            <button onclick="toggleChapter('chapter1', this)">Chapter 1</button>
            <div class="page-buttons" id="chapter1">
                <a href="https://example.com/chapter1/page1"><button>Page 1</button></a>
                <a href="https://example.com/chapter1/page2"><button>Page 2</button></a>
                <a href="https://example.com/chapter1/page3"><button>Page 3</button></a>
            </div>
        </div>
        <div class="chapter">
            <button onclick="toggleChapter('chapter2', this)">Chapter 2</button>
            <div class="page-buttons" id="chapter2">
                <a href="https://example.com/chapter2/page1"><button>Page 1</button></a>
                <a href="https://example.com/chapter2/page2"><button>Page 2</button></a>
                <a href="https://example.com/chapter2/page3"><button>Page 3</button></a>
            </div>
        </div>
        <!-- Additional chapters can be added similarly -->
    </div>

    <script>
        function toggleChapter(chapterId, chapterButton) {
            // Toggle 'selected' class for chapters
            document.querySelectorAll('.chapter button').forEach(btn => {
                btn.classList.remove('selected');
            });
            chapterButton.classList.add('selected');

            // Manage visibility of page buttons
            document.querySelectorAll('.page-buttons').forEach(div => {
                div.style.display = 'none';
            });
            var pages = document.getElementById(chapterId);
            pages.style.display = 'flex'; // Ensure the page buttons are visible and remain so
        }
    </script>
</body>
</html>
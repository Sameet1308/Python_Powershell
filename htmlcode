<body>
    <div class="chapters-container">
        <div class="chapter-button" onclick="togglePages('chapter1', this)">Chapter 1</div>
        <div class="chapter-button" onclick="togglePages('chapter2', this)">Chapter 2</div>
    </div>
    <div id="chapter1" class="pages-container">
        <a href="https://example.com/chapter1/page1"><div class="page-button" onclick="selectPage(this)">Page 1</div></a>
        <a href="https://example.com/chapter1/page2"><div class="page-button" onclick="selectPage(this)">Page 2</div></a>
        <a href="https://example.com/chapter1/page3"><div class="page-button" onclick="selectPage(this)">Page 3</div></a>
        <a href="https://example.com/chapter1/page4"><div class="page-button" onclick="selectPage(this)">Page 4</div></a>
    </div>
    <div id="chapter2" class="pages-container">
        <a href="https://example.com/chapter2/page1"><div class="page-button" onclick="selectPage(this)">Page 1</div></a>
        <a href="https://example.com/chapter2/page2"><div class="page-button" onclick="selectPage(this)">Page 2</div></a>
        <a href="https://example.com/chapter2/page3"><div class="page-button" onclick="selectPage(this)">Page 3</div></a>
        <a href="https://example.com/chapter2/page4"><div class="page-button" onclick="selectPage(this)">Page 4</div></a>
    </div>

    <script>
        function togglePages(chapterId, element) {
            // Remove 'selected' class from all chapter buttons
            document.querySelectorAll('.chapter-button').forEach(btn => {
                btn.classList.remove('selected');
            });
            element.classList.add('selected');

            // Hide all pages containers
            document.querySelectorAll('.pages-container').forEach(div => {
                div.style.display = 'none';
            });

            // Show the corresponding pages container and clear previous page selections
            const pagesContainer = document.getElementById(chapterId);
            pagesContainer.style.display = 'flex';
            pagesContainer.querySelectorAll('.page-button').forEach(page => {
                page.classList.remove('selected');
            });
        }

        function selectPage(pageElement) {
            // Remove 'selected' class from all pages in the current container
            pageElement.closest('.pages-container').querySelectorAll('.page-button').forEach(page => {
                page.classList.remove('selected');
            });
            //
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Chapter Panel Navigation</title>
<style>
    body, html {
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        font-family: Arial, sans-serif;
        height: 100%;
    }
    .chapters-container {
        display: flex; /* Aligns chapters horizontally */
        background-color: #f0f0f0;
        padding: 10px 0;
    }
    .chapter-button {
        margin: 5px 10px;
        padding: 10px 20px;
        border: 2px solid transparent;
        background-color: #e0e0e0;
        font-size: 18px;
        cursor: pointer;
    }
    .chapter-button.selected, .chapter-button:hover {
        color: red;
        border-color: red;
    }
    .pages-container {
        display: none; /* Initially hides the pages container */
        flex-direction: row; /* Aligns pages horizontally */
        justify-content: center;
        margin-top: 5px;
    }
    .page-button {
        margin: 5px;
        padding: 5px 10px;
        border: 1px solid gray;
        background-color: #ffffff;
        cursor: pointer;
    }
</style>
</head>
<body>
    <div class="chapters-container">
        <div class="chapter-button" onclick="togglePages('chapter1', this)">Chapter 1</div>
        <div class="chapter-button" onclick="togglePages('chapter2', this)">Chapter 2</div>
    </div>
    <div id="chapter1" class="pages-container">
        <a href="https://example.com/chapter1/page1"><div class="page-button">Page 1</div></a>
        <a href="https://example.com/chapter1/page2"><div class="page-button">Page 2</div></a>
        <a href="https://example.com/chapter1/page3"><div class="page-button">Page 3</div></a>
    </div>
    <div id="chapter2" class="pages-container">
        <a href="https://example.com/chapter2/page1"><div class="page-button">Page 1</div></a>
        <a href="https://example.com/chapter2/page2"><div class="page-button">Page 2</div></a>
        <a href="https://example.com/chapter2/page3"><div class="page-button">Page 3</div></a>
    </div>

    <script>
        function togglePages(chapterId, element) {
            // Remove 'selected' class from all chapter buttons
            document.querySelectorAll('.chapter-button').forEach(btn => {
                btn.classList.remove('selected');
            });
            // Hide all pages containers
            document.querySelectorAll('.pages-container').forEach(div => {
                div.style.display = 'none';
            });

            // Add 'selected' class to the clicked chapter button
            element.classList.add('selected');
            // Show the corresponding pages container
            document.getElementById(chapterId).style.display = 'flex';
        }
    </script>
</body>
</html>
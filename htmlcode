<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Linkable Chapter Buttons</title>
<style>
    body, html {
        height: 100%;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Arial, sans-serif;
    }
    a {
        text-decoration: none; /* Removes default hyperlink underline */
    }
    button {
        height: 8vh;
        padding: 0 1vh;
        margin: 5px;
        border: none;
        border-bottom: 3px solid transparent;
        background-color: transparent;
        color: black;
        outline: none;
        transition: color 0.3s, border-bottom 0.3s;
        font-size: 2vh;
    }
    button:hover {
        color: red;
    }
    .selected {
        color: red;
        border-bottom: 3px solid red;
    }
</style>
</head>
<body>
    <div class="container">
        <a href="https://example.com/chapter1"><button id="btn1" class="selected" onclick="selectButton('btn1')">Chapter 1</button></a>
        <a href="https://example.com/chapter2"><button id="btn2" onclick="selectButton('btn2')">Chapter 2</button></a>
        <a href="https://example.com/chapter3"><button id="btn3" onclick="selectButton('btn3')">Chapter 3</button></a>
        <a href="https://example.com/chapter4"><button id="btn4" onclick="selectButton('btn4')">Chapter 4</button></a>
        <a href="https://example.com/chapter5"><button id="btn5" onclick="selectButton('btn5')">Chapter 5</button></a>
    </div>

    <script>
        function selectButton(selectedId) {
            // Prevents default link navigation
            event.preventDefault();

            // Remove the selected class from all buttons
            document.querySelectorAll('button').forEach(button => {
                button.classList.remove('selected');
            });

            // Add the selected class to the clicked button
            document.getElementById(selectedId).classList.add('selected');
        }
    </script>
</body>
</html>
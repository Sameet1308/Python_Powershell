<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
  .chapter-container {
    display: flex;
  }

  .panel-container {
    display: flex;
    margin-top: 10px;
  }

  .panel {
    padding: 10px;
    margin: 5px;
    border: 1px solid #ccc;
  }

  .panel.selected {
    color: red;
    border-bottom: 3px solid red;
  }

  .panel a {
    text-decoration: none;
  }
</style>
<title>Nested Panels</title>
</head>
<body>
  <div class="chapter-container">
    <h2>Chapter 1</h2>
    <div class="panel-container">
      <a href="#" class="panel selected">Page 1</a>
      <a href="#" class="panel">Page 2</a>
      <a href="#" class="panel">Page 3</a>
      <a href="#" class="panel">Page 4</a>
    </div>
  </div>

  <div class="chapter-container">
    <h2>Chapter 2</h2>
    <div class="panel-container">
      <a href="#" class="panel">Page 1</a>
      <a href="#" class="panel">Page 2</a>
      <a href="#" class="panel">Page 3</a>
      <a href="#" class="panel">Page 4</a>
    </div>
  </div>

  <script>
  // Add click event listener to panels
  const panels = document.querySelectorAll('.panel');
  panels.forEach(panel => {
    panel.addEventListener('click', function() {
      // Remove selected class from all panels
      panels.forEach(p => p.classList.remove('selected'));
      // Add selected class to clicked panel
      this.classList.add('selected');
    });
  });
  </script>
</body>
</html>

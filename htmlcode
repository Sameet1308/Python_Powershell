<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Interactive Chapter and Page Selection</title>
<style>
    body, html {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        font-family: Arial, sans-serif;
    }
    .chapter {
        margin: 10px;
        display: flex;
        align-items: center;
    }
    button {
        height: 6vh;
        padding: 0 0.5vh;
        margin: 0 5px; /* Spacing between buttons */
        border: none;
        border-bottom: 3px solid transparent;
        background-color: transparent;
        color: black;
        outline: none;
        transition: color 0.3s, border-bottom 0.3s;
        font-size: 1.8vh;
        display: flex;
        align-items: start;
    }
    button:hover, .selected {
        color: red;
        border-bottom: 3px solid red;
    }
    .page-buttons {
        display: none; /* Initially hide page buttons */
        flex-direction: row; /* Aligns page buttons horizontally */
        padding-left: 20px;
    }
    .chapter.selected .page-buttons {
        display: flex; /* Show page buttons when chapter is selected */
    }
</style>
</head>
<body>
    <div class="chapter">
        <button onclick="toggleChapter('chapter1', this)">Chapter 1</button>
        <div class="page-buttons" id="chapter1">
            <a href="https://example.com/chapter1/page1"><button>Page 1</button></a>
            <a href="https://example.com/chapter1/page2"><button>Page 2</button></a>
            <a href="https://example.com/chapter1/page3"><button>Page 3</button></a>
        </div>
    </div>
    <div class="chapter">
        <button onclick="toggleChapter('chapter2', this)">Chapter 2</button>
        <div class="page-buttons" id="chapter2">
            <a href="https://example.com/chapter2/page1"><button>Page 1</button></a>
            <a href="https://example.com/chapter2/page2"><button>Page 2</button></a>
            <a href="https://example.com/chapter2/page3"><button>Page 3</button></a>
        </div>
    </div>
    <!-- Repeat for other chapters as necessary -->

    <script>
        function toggleChapter(chapterId, chapterButton) {
            // Remove 'selected' class from all chapters
            document.querySelectorAll('.chapter button').forEach(btn => {
                btn.classList.remove('selected');
            });
            // Add 'selected' class to the clicked chapter button
            chapterButton.classList.add('selected');

            // Hide all page buttons
            document.querySelectorAll('.page-buttons').forEach(div => {
                div.style.display = 'none';
            });
            // Show page buttons for the selected chapter
            var pages = document.getElementById(chapterId);
            pages.style.display = 'flex';

            // Optionally highlight a default page
            var firstPageButton = pages.querySelector('button');
            if(firstPageButton) {
                firstPageButton.classList.add('selected');
            }
        }
    </script>
</body>
</html>